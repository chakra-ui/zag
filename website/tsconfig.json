{
  "root": true,
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/panda/*": ["./panda/*"],
      "@/contentlayer": [".contentlayer/generated"],
      "@/*": ["src/*"]
    },
    "verbatimModuleSyntax": false,
    "isolatedModules": true
  },
  "plugins": [{ "name": "next" }],
  "include": [
    "next-env.d.ts",
    ".contentlayer",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
